---
import BaseLayout from '../layouts/BaseLayout.astro'
import Tags from '../components/Tags.astro'

const { frontmatter } = Astro.props
---

<BaseLayout pageTitle={frontmatter.title}>
  <p><em>{frontmatter.description}</em></p>
  <p>Written by {frontmatter.author}, published on {frontmatter.pubDate.toString().slice(0, 10)}</p>
  {frontmatter.image.url && <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />}
  <slot />
  {frontmatter.tags && <Tags tags={frontmatter.tags} />}
</BaseLayout>
